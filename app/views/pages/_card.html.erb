<div style="margin-bottom: 15px", class="col-lg-4">
  <div class="card">
    <%=link_to ((cl_image_tag artwork.images.first.key, height: 250) if artwork.images.exists?), artwork_id_path(artwork.id), class: "card-img-top", style: "text-align: center"%>

    <div class="card-body">
      <h5 class="card-title"><%=link_to artwork.name, artwork_id_path(artwork.id)%></h5>
      <% if artwork.total_amount == 0 %>
          <h3> Uitverkocht </h3>
        <% else %>
          <h3><%=number_to_currency(artwork.standard_price)%></h3>
        <% end %>
      <p class="card-text"><%=artwork.description%></p>
    </div>
    <div class="card-footer">
      <small class="text-muted"><%=artwork.keywords.map{|n| link_to n.name, artwork_path(kw: n.id)}.join(', ').html_safe%></small></small>
    </div>
  </div>
</div>